<div class="d-flex align-content-stretch justify-content-center flex-wrap no-gutters mx-n2">

    {% assign items = include.items | sort: 'rank' %}
    {% for item in items %}
    <div class="col-sm-6 col-md-4 mb-3">
        {% if item.external_page %}
        <a href="{{ item.external_page }}" class="no-decoration" target="_blank">
            {% else %}
            <a href="{{ item.url | relative_url }}" class="no-decoration">
                {% endif %}
                <div class="card h-100 mx-2 hoverable">
                    {% if item.past %}
                        <span class="badge badge-primary completed">completed</span>
                    {% endif %}
                    {% if item.img %}
                    <div class="card-header">
                        {% if item.img == 'title' %}
                        {{ item.title }}
                        {% else %}
                        {% assign my_path = item.img | prepend: 'assets/img/projects/' %}
                        <img src="{{my_path | relative_url}}"  style="object-fit: cover; width: 90%" alt="{{ item.title }}" />
                        {% endif %}
                    </div>
                    {% endif %}
                    <div class="card-body">
                        {% if item.img_contains_title != true %}
                        <h4 class="card-title">{{ item.title }}</h4>
                        {% endif %}
                        <p class="card-text">{{ item.description }}</p>
                    </div>
                </div>
                {% if item.inline == false or item.external_page %}</a>{% endif %}
    </div>
    {% endfor %}

</div>
